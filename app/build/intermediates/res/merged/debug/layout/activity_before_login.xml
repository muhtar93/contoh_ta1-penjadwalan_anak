<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sfk.project.com.scheduleforkids.BeforeLoginActivity"
    android:gravity="center|center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="#27B899">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sfk_splash_screen"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnParent"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk sebagai Orang Tua"/>

    <Button
        android:id="@+id/btnKid"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk sebagai Anak"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/daftar"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"/>
</LinearLayout>
