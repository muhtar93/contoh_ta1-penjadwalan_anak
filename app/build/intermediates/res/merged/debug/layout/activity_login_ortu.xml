<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sfk.project.com.scheduleforkids.BeforeLoginActivity"
    android:gravity="center|center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="#27B899">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sfk_splash_screen"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usernameParent"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:hint="Username"/>

    <EditText
        android:id="@+id/passwordParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kata Sandi"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Masuk"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/lupaKataSandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Lupa Kata Sandi?"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>
